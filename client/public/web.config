<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- Serve static files (assets, favicon, etc.) directly -->
        <rule name="Static Files" stopProcessing="true">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
          </conditions>
          <action type="None" />
        </rule>
        <!-- Do NOT rewrite missing static assets (let them 404 properly) -->
        <rule name="Static Asset 404" stopProcessing="true">
          <conditions>
            <add input="{REQUEST_URI}" pattern="\.(js|css|map|ico|svg|png|jpg|gif|webp|woff|woff2|ttf)$" />
          </conditions>
          <action type="None" />
        </rule>
        <!-- Rewrite everything else to index.html for React Router -->
        <rule name="React Router" stopProcessing="true">
          <action type="Rewrite" url="index.html" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
